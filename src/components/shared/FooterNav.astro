---
export interface Props{
    title:string,
    navItems:{
        itemText:string,
        itemLink:string
    }[]
}

const {title, navItems} = Astro.props
---

<nav class="space-y-6">
    <h2 class="capitalze font-semibold text-heading-1">
        {title}
    </h2>
    <ul class="space-y-4 md:text-lg text-heading-3">
        {navItems.map((navItem)=>(
            <li>
                <a href={navItem.itemLink} class="transition hover:text-primary">
                    {navItem.itemText}
                </a>
            </li>
        ))

        }
    </ul>
</nav>